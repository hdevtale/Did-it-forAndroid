<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DidIt" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_dark_secondary</item>
        <item name="colorOnSecondary">@color/text_dark_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        
        <!-- Text selection colors -->
        <item name="android:textSelectHandle">@color/text_selection_handle</item>
        <item name="android:textSelectHandleLeft">@color/text_selection_handle</item>
        <item name="android:textSelectHandleRight">@color/text_selection_handle</item>
        <item name="android:colorAccent">@color/accent_red</item>
        
        <!-- Dark mode text colors -->
        <item name="android:textColorPrimary">@color/text_dark_primary</item>
        <item name="android:textColorSecondary">@color/text_dark_secondary</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_dark_primary</item>
        <item name="colorSurfaceVariant">@color/surface_dark_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_dark_secondary</item>
        <item name="colorOutline">@color/border_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_dark_primary</item>
        
        <!-- Custom button styles for better visibility -->
        <item name="materialButtonStyle">@style/Widget.DidIt.Button</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.DidIt.MaterialAlertDialog</item>
    </style>
    
    <!-- Custom button style -->
    <style name="Widget.DidIt.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_dark_text</item>
        <item name="backgroundTint">@color/button_dark_primary</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Custom button style for accent actions -->
    <style name="Widget.DidIt.Button.Accent" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent_red</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Custom button style for secondary actions -->
    <style name="Widget.DidIt.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/button_dark_text_secondary</item>
        <item name="strokeColor">@color/border_dark</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Custom alert dialog theme -->
    <style name="ThemeOverlay.DidIt.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/accent_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_dark_primary</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Button colors for better visibility -->
        <item name="colorSecondary">@color/button_dark_secondary</item>
        <item name="colorOnSecondary">@color/text_dark_primary</item>
        
        <!-- Background and text colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_dark_primary</item>
    </style>
    
    <!-- CollapsingToolbar title styles for dark mode -->
    <style name="ExpandedTitleStyle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/accent_red</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="CollapsedTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/accent_red</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
</resources>