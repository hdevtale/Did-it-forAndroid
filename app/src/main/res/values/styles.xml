<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom button style for dialog buttons -->
    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- Custom button style for accent/danger actions -->
    <style name="DialogButtonStyle.Accent" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/accent_red</item>
        <item name="android:fontFamily">@font/ntype82</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- Custom EditText style -->
    <style name="RetroEditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:colorAccent">@color/accent_red</item>
    </style>
    
    <!-- Custom EditText style for notes -->
    <style name="RetroEditTextStyle.Notes" parent="RetroEditTextStyle">
        <item name="android:gravity">top|start</item>
        <item name="android:minLines">3</item>
        <item name="android:maxLines">8</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollHorizontally">false</item>
    </style>
</resources>
