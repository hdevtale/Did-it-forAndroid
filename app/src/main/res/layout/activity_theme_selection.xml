<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp">

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE YOUR THEME"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:fontFamily="@font/ntype82"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Welcome Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your preferred appearance"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:fontFamily="@font/ntype82"
            android:gravity="center" />
    </LinearLayout>

        <!-- Theme Options Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Light Theme Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lightThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Light Theme Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_light_theme"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Light Theme" />

                    <!-- Light Theme Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIGHT THEME"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/ntype82"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clean white background with dark text"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/ntype82"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="?android:attr/textColorSecondary"
                        android:contentDescription="Select" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dark Theme Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/darkThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Dark Theme Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dark_theme"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Dark Theme" />

                    <!-- Dark Theme Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DARK THEME"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/ntype82"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ELEGANT DARK BACKGROUND WITH WHITE TEXT"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/ntype82"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="?android:attr/textColorSecondary"
                        android:contentDescription="Select" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Device Theme Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deviceThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Device Theme Icon -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_device_theme"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Device Theme" />

                    <!-- Device Theme Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEVICE THEME"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:fontFamily="@font/ntype82"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AUTOMATICALLY FOLLOWS YOUR SYSTEM SETTINGS"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/ntype82"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="?android:attr/textColorSecondary"
                        android:contentDescription="Select" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
