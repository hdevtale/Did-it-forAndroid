<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure Single Task Widget"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:fontFamily="@font/ntype82"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select which task you want to display in your widget. You can log time for this task directly from your home screen."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:fontFamily="@font/ibm_plex_mono"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Task Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Task:"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:fontFamily="@font/ntype82"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/taskSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="24dp" />

        <!-- No Tasks Message -->
        <TextView
            android:id="@+id/noTasksMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No ongoing tasks available. Create some tasks in the app first."
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:fontFamily="@font/ibm_plex_mono"
            android:gravity="center"
            android:padding="24dp"
            android:background="@drawable/edit_text_background"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="32dp">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                android:text="Cancel"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                android:fontFamily="@font/ntype82"
                android:backgroundTint="@color/button_dark_gray"
                app:cornerRadius="8dp" />

            <!-- Configure Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/configureButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Add Widget"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:fontFamily="@font/ntype82"
                android:backgroundTint="@color/accent_red"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
