<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with aligned title and version -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's New"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="24sp"
                    android:fontFamily="@font/ntype82"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 5.0"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/ibm_plex_mono"
                    android:background="@drawable/version_badge_background_subtle"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:tint="?android:attr/textColorSecondary"
                android:contentDescription="Close"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Feature 1: Undo Functionality -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_undo"
                    android:tint="@color/accent_red"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Undo Task Completion"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        android:fontFamily="@font/ntype82"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap undo to bring back completed tasks"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="13sp"
                        android:fontFamily="@font/ibm_plex_mono" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature 2: Task Expansion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_note"
                    android:tint="@color/accent_red"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Smooth Task Expansion"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        android:fontFamily="@font/ntype82"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap tasks to expand and manage notes"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="13sp"
                        android:fontFamily="@font/ibm_plex_mono" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature 3: Widget Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check"
                    android:tint="@color/accent_red"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Widget Task Selection"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        android:fontFamily="@font/ntype82"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose which task to display in widgets"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="13sp"
                        android:fontFamily="@font/ibm_plex_mono" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature 4: Performance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bell"
                    android:tint="@color/accent_red"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enhanced Performance"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp"
                        android:fontFamily="@font/ntype82"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Faster, smoother, and more reliable"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="13sp"
                        android:fontFamily="@font/ibm_plex_mono" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to Did-It"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:fontFamily="@font/ntype82"
            android:backgroundTint="@color/accent_red"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
