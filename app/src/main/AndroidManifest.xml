<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DidIt">

        <activity
            android:name=".LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.DidIt"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ThemeSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.DidIt"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.DidIt"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="uiMode|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop" />

        <activity
            android:name=".SimpleTaskWidgetConfigureActivity"
            android:exported="false"
            android:theme="@style/Theme.DidIt"
            android:screenOrientation="portrait" />




        <!-- Simple Single Task Widget -->
        <receiver
            android:name=".SimpleTaskWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/simple_task_widget_info" />
        </receiver>

        <!-- Simple Task List Widget -->
        <receiver
            android:name=".SimpleTaskListWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/simple_task_list_widget_info" />
        </receiver>

        <!-- Simple Widget Log Receiver -->
        <receiver
            android:name=".SimpleWidgetLogReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.harshal.didit.SIMPLE_WIDGET_LOG_TIME" />
            </intent-filter>
        </receiver>

        <!-- Reminder Receiver -->
        <receiver
            android:name=".ReminderReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.harshal.didit.REMINDER_ALARM" />
            </intent-filter>
        </receiver>


    </application>

</manifest>